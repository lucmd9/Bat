#!/bin/bash


_get_ziplink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $UPSTREAM_REPO == "bat" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL2x1Y21kOS9iYXRtYW4vYXJjaGl2ZS9CQVRULnppcA==" | base64 -d
    elif [[ $UPSTREAM_REPO =~ $regex ]]
    then
        if [[ $UPSTREAM_REPO_BRANCH ]]
        then
            echo "${UPSTREAM_REPO}/archive/${UPSTREAM_REPO_BRANCH}.zip"
        else
            echo "${UPSTREAM_REPO}/archive/BATT.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL2x1Y21kOS9iYXRtYW4vYXJjaGl2ZS9CQVRULnppcA==" | base64 -d
    fi
}

_get_repolink () {
    local regex
    local rlink
    regex='(https?)://github.com/.+/.+'
    if [[ $UPSTREAM_REPO == "bat" ]]
    then
        rlink=`echo "aHR0cHM6Ly9naXRodWIuY29tL2x1Y21kOS9CYXRtYW4uZ2l0" | base64 -d`
    elif [[ $UPSTREAM_REPO =~ $regex ]]
    then
        rlink=`echo "${UPSTREAM_REPO}"`
    else
        rlink=`echo "aHR0cHM6Ly9naXRodWIuY29tL2x1Y21kOS9CYXRtYW4uZ2l0" | base64 -d`
    fi
    echo "$rlink"
}


_run_python_code() {
    python3${pVer%.*} -c "$1"
}

_run_catpack_git() {
    $(_run_python_code 'from git import Repo
import sys
OFFICIAL_UPSTREAM_REPO = "https://github.com/lucmd9/Batman"
ACTIVE_BRANCH_NAME = "BATT"
repo = Repo.init()
origin = repo.create_remote("temponame", OFFICIAL_UPSTREAM_REPO)
origin.fetch()
repo.create_head(ACTIVE_BRANCH_NAME, origin.refs[ACTIVE_BRANCH_NAME])
repo.heads[ACTIVE_BRANCH_NAME].checkout(True) ')
}

_run_cat_git() {
    local repolink=$(_get_repolink)
    $(_run_python_code 'from git import Repo
import sys
OFFICIAL_UPSTREAM_REPO="'$repolink'"
ACTIVE_BRANCH_NAME = "'$UPSTREAM_REPO_BRANCH'" or "BATT"
repo = Repo.init()
origin = repo.create_remote("temponame", OFFICIAL_UPSTREAM_REPO)
origin.fetch()
repo.create_head(ACTIVE_BRANCH_NAME, origin.refs[ACTIVE_BRANCH_NAME])
repo.heads[ACTIVE_BRANCH_NAME].checkout(True) ')
}

_set_bot () {
    local zippath
    zippath="BATT.zip"
    echo "ÿßŸÑÿÆŸÅÿßÿ¥ Ÿäÿ≥ÿ™ŸäŸÇÿ∏ü¶á"
    wget -q $(_get_ziplink) -O "$zippath"
    echo " ÿßÿ¥ÿßÿ±ÿ© ÿßŸÑÿÆŸÅÿßÿ¥"
    CATPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo " ŸäŸÜÿ∏ÿ± ÿßŸÑŸâ ŸÖÿß ÿ≠ŸàŸÑŸá "
    echo " ŸäÿµÿØÿ± ŸÖŸàÿ¨ÿßÿ™ ÿµŸàÿ™ŸäŸá "
    rm -rf "$zippath"
    sleep 5
    _run_catpack_git
    cd $CATPATH
    _run_cat_git
    python3 ../setup/updater.py ../requirements.txt requirements.txt
    chmod -R 755 bin
    echo "    ü¶á ÿ®ÿØÿ°ÿßŸÑÿÆŸÅÿßÿ¥ ÿ®ÿßŸÑÿ∑Ÿäÿ±ÿßŸÜ    "
    echo "

    "
    python3 -m BATT
}

_set_bot
